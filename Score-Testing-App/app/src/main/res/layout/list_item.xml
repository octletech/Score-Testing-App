<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="10dp"
    android:background="@drawable/card_background"
    android:descendantFocusability="beforeDescendants"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player :"
        android:id="@+id/member_name_heading"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roger Federer"
        android:id="@+id/member_name"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/member_name_heading"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ranking :"
        android:id="@+id/member_rank_heading"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@+id/member_name_heading"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/member_rank_text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/member_rank_heading"
        android:textSize="25dp"
        android:layout_below="@+id/member_name"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select to Play"
        android:textSize="25dp"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/play_text"
        android:textColor="@color/black"
        android:layout_below="@+id/member_rank_text"/>


</RelativeLayout>
