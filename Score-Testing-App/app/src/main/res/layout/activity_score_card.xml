<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.esporte.ScoreCardActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ScoreCard"
        android:textSize="30dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangular_border">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points"
        android:textSize="23dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/player_heading1"
        android:id="@+id/set_name"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:layout_weight="1"
        android:textSize="23dp"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/player_heading1"
        android:layout_below="@+id/set_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:textSize="23dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:id="@+id/player_heading1"
        android:layout_below="@+id/set_name"/>

</LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listview"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@drawable/rectangular_border"
        android:layout_gravity="center"></ListView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add/Edit Points"
            android:textSize="23dp"
            android:id="@+id/add_points_text"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/rectangular_border"/>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/add_edit_listview"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@drawable/rectangular_border"
        android:layout_gravity="center"></ListView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/result_buton"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="6dp"
        android:padding="12dp"
        android:textColor="@color/white"
        android:text="See Result"/>
</LinearLayout>
