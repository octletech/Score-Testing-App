<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.esporte.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi "
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:background="#3AFF4050"
        android:id="@+id/hi_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:text="  Marata Safin "
        android:background="#3AFF4050"
        android:textSize="30dp"
        android:layout_toRightOf="@+id/hi_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:text="Ranking :"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="70dp"
        android:textSize="35dp"
        android:id="@+id/ranking_heading"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:text="50"
        android:layout_marginBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_toRightOf="@+id/ranking_heading"
        android:paddingRight="5dp"
        android:layout_marginTop="70dp"
        android:textSize="35dp"
        android:id="@+id/ranking_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ranking_heading"
        android:text="Seeding :"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="5dp"
        android:textSize="35dp"
        android:id="@+id/seeding_heading"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ranking_heading"
        android:text="5"
        android:layout_marginBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_toRightOf="@+id/seeding_heading"
        android:paddingRight="5dp"
        android:layout_marginTop="5dp"
        android:textSize="35dp"
        android:id="@+id/seeding_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seeding_heading"
        android:text="Level :"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="5dp"
        android:textSize="35dp"
        android:id="@+id/level_heading"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seeding_text"
        android:text="Professional"
        android:layout_marginBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_toRightOf="@+id/level_heading"
        android:paddingRight="5dp"
        android:layout_marginTop="5dp"
        android:textSize="35dp"
        android:id="@+id/level_text"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/play_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:padding="12dp"
        android:layout_below="@+id/level_heading"
        android:text="Play Match"
        android:textColor="@color/white"/>
</RelativeLayout>
