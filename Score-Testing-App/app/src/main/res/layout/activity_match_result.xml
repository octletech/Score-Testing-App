<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    tools:context="com.esporte.MatchResultActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/congrats_text"
        android:text="Congragulations You Won!!!!!!"
        android:textSize="30dp"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:background="@drawable/rectangular_border"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:id="@+id/score_heading"
        android:layout_below="@+id/congrats_text"
        android:textSize="30dp"
        android:padding="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/score_value"
        android:text="6-5 7-5 6-2"
        android:layout_toRightOf="@+id/score_heading"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/congrats_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/statistics_heading"
        android:text="Stats"
        android:background="#0FECFF"
        android:layout_toRightOf="@+id/score_heading"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/score_value"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Ranking :"
        android:id="@+id/current_ranking_heading"
        android:layout_below="@+id/statistics_heading"
        android:textSize="30dp"
        android:padding="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="31"
        android:padding="10dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/current_ranking_value"
        android:layout_toRightOf="@+id/current_ranking_heading"
        android:layout_below="@+id/statistics_heading"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seeding:"
        android:id="@+id/current_seeding_heading"
        android:layout_below="@+id/current_ranking_heading"
        android:textSize="30dp"
        android:padding="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="20"
        android:padding="10dp"
        android:id="@+id/current_seeding_value"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/current_seeding_heading"
        android:layout_below="@+id/current_ranking_heading"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level:"
        android:id="@+id/level_heading"
        android:layout_below="@+id/current_seeding_heading"
        android:textSize="30dp"
        android:padding="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="3"
        android:padding="10dp"
        android:id="@+id/level_heading_value"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/level_heading"
        android:layout_below="@+id/current_seeding_heading"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/home_button"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="6dp"
        android:padding="12dp"
        android:textColor="@color/white"
        android:layout_below="@+id/level_heading_value"
        android:text="Home"/>


</RelativeLayout>
